<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutputActivity"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/output_activity_main_margin_bottom"
    android:paddingLeft="@dimen/main_padding_left"
    android:paddingRight="@dimen/main_padding_right"
    android:weightSum="10"
    android:layout_marginTop="@dimen/linear_margin_top">

    <LinearLayout
        android:layout_width="@dimen/width_default"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6"
        android:gravity="center">

        <TextView
            android:id="@+id/bmi_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/bmi_result"/>

        <TextView
            android:id="@+id/bmi_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/bmi_description"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/width_default"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bmi" />

    </LinearLayout>

</LinearLayout>